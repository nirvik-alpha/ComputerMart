<body>

    <div class="container">
        <div class="content">
            <div class="left-side">
                <div class="address details">
                    <i class="fas fa-map-marker-alt"></i>
                    <div class="topic">Address</div>
                    <div class="text-one">Dhaka</div>
                    <div class="text-two">Bangladesh</div>
                </div>
                <div class="phone details">
                    <i class="fas fa-phone-alt"></i>
                    <div class="topic">Phone</div>
                    <div class="text-one">+0198 9893 564</div>
                    <div class="text-two">+0176 3434 567</div>
                </div>
                <div class="email details">
                    <i class="fas fa-envelope"></i>
                    <div class="topic">Email</div>
                    <div class="text-one">ComputerMart@gmail.com</div>
                    <div class="text-two">info.CM@gmail.com</div>
                </div>
            </div>
            <div class="right-side">
                <div class="topic-text">Send us a Feedback</div>
                <p> You can send feedback from here </p>
                <form action="#" method="post">
                    <div class="input-box">
                        @*<input type="text" placeholder="Enter your name">*@
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @type = "text", @placeholder = "Enter your name" } })
                    </div>
                    <div class="input-box">
                        @*<input type="text" placeholder="Enter your email">*@
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @type = "text", @placeholder = "Enter your email" } })
                    </div>
                    <div class="input-box message-box">
                        @*<textarea placeholder="Enter your message"></textarea>*@
                        @Html.EditorFor(model => model.message, new { htmlAttributes = new { @placeholder = "Enter your message" } })
                    </div>
                    <div class="button">
                        <input type="submit" value="Send Now">
                    </div>
                </form>
            </div>
        </div>
    </div>

